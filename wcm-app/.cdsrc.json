{
  "build": {
    "target": "gen",
    "tasks": [
      {
        "for": "hana",
        "src": "db",
        "options": {
          "model": ["db", "srv"]
        }
      },
      {
        "for": "node-cf",
        "src": "srv",
        "options": {
          "model": ["db", "srv"]
        }
      }
    ]
  },
  "odata": {
    "version": "v4"
  },
  "hana": {
    "deploy-format": "hdbtable"
  },
  "i18n": {
    "default_language": "en"
  },
  "features": {
    "fetch_csrf": true
  }
}
