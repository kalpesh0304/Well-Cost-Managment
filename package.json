{
  "name": "wcm-app",
  "version": "1.0.0",
  "description": "Well Cost Management Application - SAP BTP CAP Backend",
  "repository": "https://github.com/kalpesh0304/Well-Cost-Managment",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "@sap/cds-hana": "^2.1.0",
    "@sap/xsenv": "^4",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.19"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "build": "cds build --production",
    "deploy": "cds deploy --to hana",
    "test": "cds bind --exec jest"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "alice": {
              "password": "alice",
              "roles": ["Admin", "WellRead", "WellWrite", "AFERead", "AFEWrite", "AFEApprove", "CostRead", "CostWrite", "PartnerRead", "PartnerWrite", "JIBRead", "JIBWrite", "EconomicsRead", "EconomicsWrite", "ReportRead", "authenticated-user"]
            },
            "bob": {
              "password": "bob",
              "roles": ["AFERead", "AFEWrite", "CostRead", "WellRead", "authenticated-user"]
            },
            "carol": {
              "password": "carol",
              "roles": ["AFERead", "CostRead", "WellRead", "ReportRead", "authenticated-user"]
            }
          }
        }
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": []
}
